<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.DetailOrderActivity">

        <include
            android:id="@+id/include"
            layout="@layout/appbar" />

        <TextView
            android:id="@+id/txt_madonhang"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:text="DH001"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <TextView
            android:id="@+id/txt_ngaytao"
            android:textSize="16sp"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            android:text="Ngày tạo: 13/10/2021"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_madonhang" />

        <TextView
            android:id="@+id/txt_trangthai"
            android:textSize="16sp"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:text="Trạng thái: Đã hoàn thành"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_ngaytao" />

        <TextView
            android:id="@+id/txt_ghichu"
            style="@style/CustomTextViewQuantity"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="Ghi chú:"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_trangthai" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1" />

        <TextView
            android:id="@+id/txt_htkh"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:text="Họ tên khách hàng: Nguyễn Văn A"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/txt_diachi"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:text="Địa chỉ: 53 Võ Văn Ngân, p. Linh Chiểu, tp. Thủ Đức"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_htkh" />

        <TextView
            android:id="@+id/txt_sdt"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:text="Số điện thoại: 0123456789"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_diachi" />

        <TextView
            android:id="@+id/txt1"
            style="@style/CustomTextViewQuantity"
            android:layout_width="match_parent"
            android:text="Thông tin khách hàng"
            android:textColor="@color/gray3"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_ghichu" />

        <TextView
            android:id="@+id/textView2"
            style="@style/CustomTextViewQuantity"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray3"
            android:layout_marginEnd="15dp"
            android:layout_width="200dp"
            android:text="@string/subtitleSP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sdt" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/txt_tongtien"
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:text="Tổng tiền: 40000000 VND"
            android:paddingEnd="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_tongtien"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Left Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/drawer_view" />

</androidx.drawerlayout.widget.DrawerLayout>